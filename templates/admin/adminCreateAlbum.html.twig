{% extends 'base.html.twig' %}


{% block body %}

<div class="container">
    <h1 class="ny-5 text-center">
        Add an album
    </h1>
    

    {{form_start(form)}}

        <div class="row">
            <div class="col-6">
                {{form_row(form.name)}}
            </div>
            <div class="col-6">
                {{form_row(form.imageFrontCover)}}
            </div>


            <div class="col-6">
                {{form_row(form.imageBackCover)}}
            </div>

            <div class="col-12 text-center my-3">
                {{form_row(form.submit)}}
            </div>


        </div>

    {{ form_end(form) }}


</div>

{% endblock %}
